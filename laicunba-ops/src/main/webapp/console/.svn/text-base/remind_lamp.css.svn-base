.error_info{
	/* display:none; */
	position:fixed;
	background:#ccc;	
	top:25%;
	left:18%;
	height:0px;
	width:0px;
	font-size:16px;
}

@keyframes myfirst
{
from {opacity: 0.3;width:8px;height:8px;}
to {opacity: 0.8;width:18px;height:18px;}
}
@keyframes mytwo
{
from {opacity: 0.1;width:30px;height:30px;}
to {opacity: 0.4;width:40px;height:40px;}
}

@keyframes null
{
	
}

@keyframes error_info_show
{
from {opacity: 0;width:10%;height:250px;}
to {opacity: 1;width:60%;height:250px;}

}

@keyframes error_info_close
{
from {opacity: 1;width:60%;height:250px;}
to {opacity: 0;width:0;height:0;}
}