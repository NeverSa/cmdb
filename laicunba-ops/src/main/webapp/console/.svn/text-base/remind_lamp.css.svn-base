@charset "utf-8";
.sitemakers {
  width: 100%;
  height: 100%;
  display: block;
  top: 0;
  left: 0;
}

.wrap {

}

.wrap .bulb {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
}

.wrap #s-bulb {
  fill: green;
  stroke: green;
  stroke-width: 0;
  transition: 300ms;
}

/* .wrap:active #s-bulb {
  fill: #f00;
  stroke: #f00;
  stroke-width: 2;
  transition: 1500ms;
} */

.wrap #www-filament {
  stroke-width: 0;
  stroke-width: 0;
  transition: 300ms;
}

.wrap #www-filament {
  fill: #00ef00;
  stroke: #00ef00;
  transition: 300ms;
}

/* .wrap:active #www-filament {
