} */


.wrap .light {
  width: 50px;
  height: 50px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  
}

.wrap .light .glow {
  width: 0px;
  height: 0px;
  border-radius: 50%;
  opacity: 0;
  background: -webkit-radial-gradient(rgba(255,0,0,1), rgba(255,0,0,0) 30%);
  position: absolute;
  display: block;
  top: 38%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 300ms cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* .wrap:active .light .glow {
  width: 60px;
